#!/usr/bin/env bash

cd "$(dirname "$0")" && source .lib/barerc || exit 1

while [[ "$#" -gt 0 ]]; do
	case $1 in
		empty-lines) command="empty-lines"; shift ;;
	esac
done && set -- "$@"

input="${1:-$(cat)}"

case $command in

	empty-lines) 

		echo "$input" | sed '/^$/d'

		;;

	*) echo "Invalid filter: $filter"; exit 1 ;;

esac